{% extends "layout.jinja2" %}

{% block body %}

{% include "flash_messages.jinja2" %}
<div class="report_container">
	{% include "report_print_header.jinja2" %}
	<div class="row">
		<div class="medium-12 columns text-center">
			<h4>{{_("SETTINGS REPORT")}}</h4>
		</div>
	</div>
	<br/>
	<div class="row">
		<div class="medium-4 columns">
			<h5>{{_("Date")}}: <b>{{sys_date}}</b></h5>
		</div>
		<div class="medium-4 columns end">
			<h5>{{_("Time")}}: <b>{{sys_time}}</b></h5>
		</div>
	</div>
	<hr/>
	<div class="row">
		<div class="medium-12 columns text-center">
			<h3>{{_("Basic settings")}}</h3>
		</div>
	</div>
	<div class="row">
		<div class="medium-12 columns">
			<table class="expand" style="width:100%;" role="grid">
				<colgroup>
					<col width="40%" />
					<col/>
				</colgroup>
				<tbody>
					{% for key in basic_keys %}
					<tr>
						<td>{{key}}</td>
						<td>{{settings[key] if settings[key] != None else ""}}</td>
					</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	</div>
	<div class="row">
		<div class="medium-12 columns text-center">
			<h3>{{_("Settings")}}</h3>
		</div>
	</div>
	<div class="row">
		<div class="medium-12 columns">
			<table class="expand" style="width:100%;" role="grid">
				<colgroup>
					<col width="40%" />
					<col/>
				</colgroup>
				<tbody>
					{% for key in settings_keys %}
					<tr>
						<td>{{key}}</td>
						<td>{{settings[key] if settings[key] != None else ""}}</td>
					</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	</div>
</div>
{% endblock %}


{% block sidebar %}
<div class="row">
	<div class="medium-12 columns">
		<a href="?print=True" data-key="p" class="button expand">P - {{_("PRINT")}}</a>
	</div>
	<div class="medium-12 columns end">
		<a href="/reports" data-key="esc" class="warning button expand">ESC - {{_("EXIT")}}</a>
	</div>
</div>
{% endblock %}