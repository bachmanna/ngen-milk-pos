{% extends "layout.jinja2" %}
{% block body %}

<div class="row">
    <div class="medium-12 columns text-center">
        <h1>{{_("Shift Summary Report")}}</h1>
    </div>
</div>
{% with messages = get_flashed_messages() %}
{% if messages %}
<div class="alert-box warning">
    <ul class="flashes">
        {% for message in messages %}
        <li>{{ message }}</li>
        {% endfor %}
    </ul>
</div>
{% endif %}
{% endwith %}
<form id="frmDetailShift" name="frmDetailShift" method="get" action="">
    <div class="row">
        <div class="medium-1 columns">
            <label>{{_("Date")}}</label>
        </div>
        <div class="medium-1 columns" style="padding: 0px; margin: 0px;">
            <input type="text" class="mousetrap" name="day" value="{{search_date.day}}" />
        </div>
        <div class="medium-1 columns" style="padding: 0px; margin: 0px; width: 10px;">
            /
        </div>
        <div class="medium-1 columns" style="padding: 0px; margin: 0px;">
            <input type="text" class="mousetrap" name="month" value="{{search_date.month}}"/>
        </div>
        <div class="medium-1 columns" style="padding: 0px; margin: 0px; width: 10px;">
            /
        </div>
        <div class="medium-1 columns" style="padding: 0px; margin: 0px;">
           <input type="text" class="mousetrap" name="year" value="{{search_date.year}}"/>
        </div>
        <div class="medium-2 columns">
            &nbsp;
        </div>
        <div class="medium-1 columns">
            <label>{{_("Shift")}}</label>
        </div>
        <div class="medium-4 columns end">
            <select name="shift" class="mousetrap">
                <option {{ "selected" if shift == "MORNING" else ""}} value="MORNING">{{_("MORNING")}}</option>
                <option {{ "selected" if shift == "EVENING" else ""}} value="EVENING">{{_("EVENING")}}</option>
            </select>
        </div>
    </div>
</form>
<div class="row">
    <div class="medium-6 columns end">
        <table style="width:100%;" role="grid">
            <thead>
                <tr>
                    <th></th>
                    <th class="text-right">{{_("COW")}}</th>
                    <th class="text-right">{{_("BUFFALO")}}</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <th class="text-right">{{_("Total Member")}}</th>
                    <td class="text-right">{{summary["member"][0]}}</td>
                    <td class="text-right">{{summary["member"][1]}}</td>
                </tr>
                <tr>
                    <th class="text-right">{{_("Total Milk")}}</th>
                    <td class="text-right">{{'%0.2f'| format(summary["milk"][0]|float)}}</td>
                    <td class="text-right">{{'%0.2f'| format(summary["milk"][1]|float)}}</td>
                </tr>
                <tr>
                    <th class="text-right">{{_("Average FAT")}}</th>
                    <td class="text-right">{{'%0.2f'| format(summary["fat"][0]|float)}}</td>
                    <td class="text-right">{{'%0.2f'| format(summary["fat"][1]|float)}}</td>
                </tr>
                <tr>
                    <th class="text-right">{{_("Average SNF")}}</th>
                    <td class="text-right">{{'%0.2f'| format(summary["snf"][0]|float)}}</td>
                    <td class="text-right">{{'%0.2f'| format(summary["snf"][1]|float)}}</td>
                </tr>
                <tr>
                    <th class="text-right">{{_("Average Rate")}}</th>
                    <td class="text-right">{{'%0.2f'| format(summary["rate"][0]|float)}}</td>
                    <td class="text-right">{{'%0.2f'| format(summary["rate"][1]|float)}}</td>
                </tr>
                <tr>
                    <th class="text-right">{{_("Total")}}</th>
                    <th class="text-right">{{'%0.2f'| format(summary["total"][0]|float)}}</th>
                    <th class="text-right">{{'%0.2f'| format(summary["total"][1]|float)}}</th>
                </tr>
            </tbody>
        </table>
    </div>
</div>
<div class="row">
    <div class="medium-4 columns end">
        {{_("Grand Total")}}: <b>{{ '%0.2f'| format(summary["total"][0] + summary["total"][1]) |float}}</b>
    </div>
</div>
{% endblock %}

{% block sidebar %}

{% endblock %}

{% block statusbar %}
<div class="row action-buttons">
    <div class="medium-2 columns">
        <a href="#" onclick="$('#frmDetailShift').submit();" data-key="v" class="button expand">V - {{_("VIEW")}}</a>
    </div>
    <div class="medium-2 columns">
        <a href="/detail_shift?print=True" data-key="p" class="button expand">P - {{_("PRINT")}}</a>
    </div>
     <div class="medium-2 columns">
        <a href="/detail_shift?export=True" data-key="e" class="button expand">E - {{_("EXPORT")}}</a>
    </div>
    <div class="medium-2 columns end">
        <a href="/reports" data-key="esc" class="warning button expand">ESC - {{_("EXIT")}}</a>
    </div>
</div>
{% endblock %}