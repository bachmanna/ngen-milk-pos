{% extends "layout.jinja2" %}
{% block body %}

<div class="row">
    <div class="large-12 columns">
        <div class="panel">
            <div class="row">
                <div class="large-12 columns text-center">
                    <h1>{{_("Data Reset")}}</h1>
                </div>
            </div>
            <br/>
            {% with messages = get_flashed_messages() %}
            {% if messages %}
            <div class="medium-12 columns">
                <div class="alert-box success">
                    {% for message in messages %}
                    {{ message }}<br/>
                    {% endfor %}
                </div>
            </div>
            {% endif %}
            {% endwith %}
            <div class="text-center">
                <div class="row">
                    <div class="medium-5 small-centered columns">
                        <a href="/data_backup" class="large button expand" data-key="f1">{{_("Backup")}} - F1</a>
                    </div>
                </div>
                <div class="row">
                    <div class="medium-5 small-centered columns">
                        <a href="/get_available_data_backup" class="large button expand" data-reveal-id="backupListModal" data-reveal-ajax="true" data-key="f2">{{_("Restore")}} - F2</a>
                    </div>
                </div>
                <div class="row">
                    <div class="medium-5 small-centered columns">
                        <a href="/clear_collection_bills" class="large button expand" data-key="f3">{{_("Clear collection bills")}} - F3</a>
                    </div>
                </div>
                {% if can_access("admin") %}
                <div class="row">
                    <div class="medium-5 small-centered columns">
                        <a href="/factory_reset" class="alert large button expand" data-key="f4">{{_("Factory reset")}} - F4</a>
                    </div>
                </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>
<a href="/" data-key="esc" class="hide"></a>
<div id="backupListModal" class="reveal-modal medium" data-reveal>
</div>
{% endblock %}