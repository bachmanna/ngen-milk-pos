{% extends "layout.jinja2" %}
{% block body %}

{% include "flash_messages.jinja2" %}
<form id="frmMemberPaymentReport" name="frmMemberPaymentReport" method="get" action="" class="inline">
    <div class="row">
        <div class="medium-6 columns">
            <label>{{_("Date From")}}</label>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            <input type="text" class="mousetrap tiny" name="from_day" value="{{from_date.day}}" maxlength="2"/>
            /
            {{ select_month(name="from_month", selected_value=from_date.month) }}
            /
            {{ select_year(name="from_year", years=select_control_years, selected_value=from_date.year) }}
        </div>
        <div class="medium-6 columns">
            <label>{{_("To")}}</label>
            <input type="text" class="mousetrap tiny" name="to_day" value="{{to_date.day}}" maxlength="2" />
            /
            {{ select_month(name="to_date", selected_value=to_date.month) }}
            /
            {{ select_year(name="to_date", years=select_control_years, selected_value=to_date.year) }}
        </div>
    </div>
    <div class="row">
        <div class="medium-6 columns">
            <label>{{_("M.Code From")}}</label>
            <input type="text" class="mousetrap medium" name="from_member" value="{{from_member}}" maxlength="4" />
            <label>{{_("to")}}</label>
            <input type="text" class="mousetrap medium" name="to_member" value="{{to_member}}" maxlength="4"/>
        </div>
        <div class="medium-3 columns">
            <label>{{_("Inc")}}</label>
            <input type="text" class="mousetrap medium" name="increment" value="{{increment}}" maxlength="5"/>
        </div>
        <div class="medium-2 columns end">
            <button type="submit" class="button expand">{{_("VIEW")}}</button>
        </div>
    </div>
</form>
<hr/>
{% include "reports/member_report.jinja2" %}
{% endblock %}


{% block sidebar %}
{% include "report_page_footer.jinja2" %}
{% endblock %}