{% extends "layout.jinja2" %}
{% block body %}

<div class="row">
    <div class="medium-12 columns text-center">
        <h1>{{_("Detail Shift Report")}}</h1>
    </div>
</div>
{% include "flash_messages.jinja2" %}
<form id="frmDetailShift" name="frmDetailShift" method="get" action="" class="inline">
    <div class="row">
        <div class="medium-1 columns text-right">
            <label>{{_("Date")}}</label>
        </div>
        <div class="medium-5 columns">
            <input type="text" maxlength="2" class="mousetrap tiny" name="day" value="{{search_date.day}}" />
            /
            <input type="text" maxlength="2" class="mousetrap tiny" name="month" value="{{search_date.month}}"/>
            /
            <input type="text" maxlength="4" class="mousetrap medium" name="year" value="{{search_date.year}}" />
        </div>
        <div class="medium-1 columns text-right">
            <label>{{_("Shift")}}</label>
        </div>
        <div class="medium-3 columns">
            <select name="shift" class="mousetrap">
                <option {{ "selected" if shift == "MORNING" else ""}} value="MORNING">{{_("MORNING")}}</option>
                <option {{ "selected" if shift == "EVENING" else ""}} value="EVENING">{{_("EVENING")}}</option>
            </select>
        </div>
        <div class="medium-2 columns">
            <button type="submit" class="button expand">{{_("VIEW")}}</button>
        </div>
    </div>
</form>
<hr/>
{% include "reports/detail_shift.jinja2" %}
{% endblock %}

{% block sidebar %}
{% include "report_page_footer.jinja2" %}
{% endblock %}